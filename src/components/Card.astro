---
const { post } = Astro.props;
---

<article>
  <div class="flex flex-row gap-2">
    {
      post.data.thumbnail && (
        <div>
          <img
            src={post.data.thumbnail.src}
            alt={
              post.data.thumbnail.alt
                ? post.data.thumbnail.alt
                : post.data.title
            }
          />
        </div>
      )
    }
    <div class="flex flex-col gap-2 md:gap-5">
      <header>
        <h1 class="font-bold text-lg md:text-xl lg:text-2xl">
          <a href={post.id}>
            {post.data.title}
          </a>
        </h1>
      </header>
      {post.data.summary && <div>{post.data.summary}</div>}
    </div>
  </div>
</article>

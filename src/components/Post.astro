---
import PostCategories from "./PostCategories.astro";
import PostMeta from "./PostMeta.astro";
import PostThumbnail from "./PostThumbnail.astro";

interface Props {
  frontmatter?: any;
}

const { frontmatter } = Astro.props;
---

<article class="flex flex-col gap-5">
  <header class="flex flex-col gap-5">
    <PostCategories frontmatter={frontmatter} />

    <h1 class="font-bold text-2xl md:text-3xl lg:text-4xl leading-normal">
      {frontmatter.title}
    </h1>
    {
      frontmatter.summary && (
        <p class="text-lg text-gray-800">{frontmatter.summary}</p>
      )
    }
    <PostMeta frontmatter={frontmatter} />
  </header>

  <PostThumbnail frontmatter={frontmatter} />

  <div class="text-base md:text-lg leading-loose max-w-175">
    <slot />
  </div>
</article>
